#modal-registry .modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width 100%;
  height 100%;
  display  none;
  overflow auto;
  background-color: rgba(black, 0.6);

  .modal {
    position relative;
  }

  &.visible {
    display block;
  }

  &.up-enter {
    background-color: rgba(black, 0);
    display: block;
    .modal {
      top: 100px;
      opacity 0;
    }
  }
  &.up-enter.up-enter-active {
    background-color: rgba(black, 0.6);
    transition: background-color 300ms ease;
    display: block;
    .modal {
      top: 0;
      opacity 1;
      transition: top 300ms ease, opacity 300ms ease;
    }
  }
  &.up-exit {
    background-color: rgba(black, 0.6);
    display: block;
    .modal {
      top 0;
      opacity 1;
    }

  }
  &.up-exit.up-exit-active {
    background-color: rgba(black, 0);
    transition: background-color 300ms ease;
    display: block;
    .modal {
      top: 100px;
      opacity 0;
      transition: top 300ms ease, opacity 300ms ease;
    }
  }
}
